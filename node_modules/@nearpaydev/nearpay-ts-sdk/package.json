{
  "name": "@nearpaydev/nearpay-ts-sdk",
  "version": "1.0.5",
  "description": "nearpay sdk for proxy connection",
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "clean-after": "rm -rf ./dist/cjs/dts && rm -rf ./dist/esm/dts",
    "build": "npm run build-rollup",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv dist/esm/index.js dist/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "build-rollup": "npm run clean && rollup --config ./configs/rollup/rollup.config.mjs",
    "build-tsc": "npm run clean && npm run build:esm && npm run build:cjs",
    "prepack": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "dotenv": "^16.0.3",
    "rollup": "^3.20.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^2.0.2",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "event-target-shim": "^6.0.2",
    "rollup-plugin-dotenv": "^0.4.1",
    "uuid": "^9.0.0"
  }
}
