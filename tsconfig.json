{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2015"],
    "outDir": "./www/js",            
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["cordova"],
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
  },
  "include": ["www/**/*.ts"],
  "exclude": ["node_modules"]
}